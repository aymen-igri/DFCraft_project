{
  "manifest_version": 2,
  "name": "DFCraft - Deep Focus Timer",
  "version": "1.0.0",
  "description": "Craft your focus with Pomodoro timer, todos, and distraction blocking",
  
  "icons": {
    "16": "icons/CARACTER-16.png",
    "48": "icons/CARACTER-48.png",
    "128": "icons/CARACTER-128.png"
  },
  
  "browser_action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "DFCraft"
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  
  "permissions": ["storage", "notifications", "alarms", "activeTab", "offscreen"],

  "options_page": "src/options/options.html",
  
  "web_accessible_resources": [
    "sounds/*.wav",
    "offscreen.html",
    "offscreen.js"
  ],
  
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "dfcraft@yourname.com",
      "strict_min_version": "109.0"
    }
  }
}