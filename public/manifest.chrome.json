{
  "manifest_version": 3,
  "name": "DFCraft - Deep Focus Timer",
  "version": "1.0.0",
  "description": "Craft your focus with Pomodoro timer, todos, and distraction blocking",
  "icons": {
    "16": "icons/CARACTER-16.png",
    "48": "icons/CARACTER-48.png",
    "128": "icons/CARACTER-128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "DFCraft",
    "default_icon": {
      "16": "icons/CARACTER-16.png",
      "48": "icons/CARACTER-48.png",
      "128": "icons/CARACTER-128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "offscreen",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "staticPages/blocked.html"
        "sounds/*.wav", 
        "offscreen.html", 
        "offscreen.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "options_page": "src/options/options.html"
}